label-urgent = %icon%
label-urgent-padding = 3

label-occupied = %icon%
label-occupied-padding = 3

label-empty = %icon%
label-empty-padding = 3

[module/cpu]
type = custom/script
exec = sensors 2>/dev/null | awk '/Tdie:.*/ { print substr($2,2) }'
interval = 5

