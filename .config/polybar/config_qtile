[module/cpu]
type = custom/script
exec = sensors 2>/dev/null | awk '/Tdie:.*/ { print substr($2,2) }'
interval = 5
#format-padding = 60

[module/src]
type = custom/script
exec = ~/.config/polybar/src.sh
exec-if = which jq
interval = 60
click-left = xdg-open https://www.speedrun.com/runsawaitingverification
format-padding = 2

[module/rtgg]
