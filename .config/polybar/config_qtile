[module/date]
type = internal/date
interval = 0.5
date = %a, %B %e  %H:%M

[module/rofi]
type = custom/text
content = ${env:POLY_DISTRO:}
content-foreground = ${env:POLY_DISTRO_COLOR:#ffffff}
content-padding = 3
click-left = rofi -config ~/.config/rofi-themes/launcher.rasi -modi drun -show drun

[module/ewmh]
type = internal/xworkspaces
