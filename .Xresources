!! Extensions
URxvt.perl-ext-common: default,url-select,clipboard,keyboard-select,selection-to-clipboard,resize-font

!! Colorscheme

! special
*.foreground:   #a9b7c6
*.background:   #2b2b2b
*.cursorColor:  #a9b7c6

! black
*.color0:       #000000
*.color8:       #000000

! red
*.color1:       #e74644
*.color9:       #e74644

! green
*.color2:       #379c1a
*.color10:      #379c1a

! yellow
*.color3:       #dcc457
*.color11:      #dcc457

! blue
*.color4:       #5394ec
*.color12:      #5394ec

! magenta
*.color5:       #ae8abe
*.color13:      #ae8abe

! cyan
*.color6:       #299999
*.color14:      #299999

! white
*.color7:       #eeeeee
*.color15:      #eeeeee

!! URxvt Appearance
URxvt.iconFile: /usr/share/icons/Papirus-Dark/96x96/apps/terminal.svg
URxvt.depth: 32
Rxvt.background: [70]#000000
*.font: xft:JetBrainsMono:style=Regular:size=11,xft:HackNF:style=Regular:size=11,xft:TwitterColorEmoji:style=Regular:size=11
*.boldFont: xft:JetBrainsMono:style=Bold:size=11
*.italicFont: xft:JetBrainsMono:style=Italic:size=11
*.boldItalicFont: xft:JetBrainsMono:style=Bold Italic:size=11
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 0
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.iso14755: false

!! Keybinds
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D

!! Clipboard
URxvt.clipboard.autocopy: true
URxvt.keysym.Shift-Insert: eval:paste_clipboard

!! URL Select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: chromium
URxvt.url-select.underline: true

!! Anti-aliasing
Xft.dpi: 192
!Xft.dpi: 96
Xft.antialias: 1
Xft.hinting:1
Xft.hintstyle: hintslight
Xft.rgba:rgb
Xft.lcdfilter:lcddefault

!! Resizing ( see https://github.com/simmel/urxvt-resize-font )
URxvt.keysym.C-minus: resize-font:smaller
URxvt.keysym.C-plus: resize-font:bigger
URxvt.keysym.C-0: resize-font:reset
URxvt.keysym.C-KP_Subtract: resize-font:smaller
URxvt.keysym.C-KP_Add: resize-font:bigger
URxvt.keysym.C-KP_0: resize-font:reset
URxvt.keysym.C-Mouse_5: resize-font:smaller

